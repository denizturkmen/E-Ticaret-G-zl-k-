@using GlassesUI.Models;
@model ShippingDetails
@{
    ViewBag.Title = "Checkout";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Siparişi Bilgileriniz</h2>
            <p>Sipariş bilgilerinizi doldurunuz</p>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row">
                    <label for="Username" class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-10">
                        <span class="text-danger">
                           @User.Identity.Name
                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="AdresBasligi" class="col-sm-2 col-form-label">Adres tanimi</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="AdresBasligi" class="col-sm-2 col-form-label">Adres</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group row">
                    <label for="Sehir" class="col-sm-2 col-form-label">Sehir</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Semt" class="col-sm-2 col-form-label">Semt</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Mahalle" class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group row">
                    <label for="PostaKodu" class="col-sm-2 col-form-label">PostaKodu</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Semt" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>


            }

        </div>
    </div>
</div>

