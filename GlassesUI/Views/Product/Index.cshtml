@model IEnumerable<GlassesUI.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
   

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <p >
                @Html.ActionLink("Yeni Urun Ekle", "Create",null,new {@class="btn btn-outline-primary"})
            </p>
            <hr />
            <table class="table table-hover table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.IsApproved)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsHome)
                    </th>
              <th style="width: 210px"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                           <img src="/Upload/@item.Image" width="70"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                      
                        <td>
                            @if (item.IsApproved == true)
                            {
                                <span class="badge badge-success">Onayli</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Değil</span>
                            }
                        </td>
                        <td>
                            @if (item.IsHome == true)
                            {
                                <span class="badge badge-success">Anasayfada</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Değil</span>
                            }
                        </td>
                 
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id },new {@class="btn btn-warning btn-sm"}) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>